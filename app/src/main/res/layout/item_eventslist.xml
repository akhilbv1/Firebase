<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

  <android.support.v7.widget.CardView
      android:id="@+id/card_eventslistitem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/image_event"
          android:layout_width="95dp"
          android:layout_height="95dp"
          android:scaleType="center"
          tools:src="@drawable/swayam_logo"
          />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_eventname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="ssportss"
            android:layout_marginLeft="7dp"
            android:textSize="20sp"
            android:layout_marginStart="7dp"
            />

        <TextView
            android:id="@+id/text_eventdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_eventname"
            android:textSize="18sp"
            android:layout_marginLeft="7dp"
            tools:text="11-02-18"
            android:layout_marginStart="7dp"
            />

        <TextView
            android:id="@+id/text_eventlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_eventdate"
            android:textSize="20sp"
            android:layout_marginLeft="7dp"
            tools:text="hyderabad"
            android:layout_marginStart="7dp"
            />

      </RelativeLayout>

    </LinearLayout>

  </android.support.v7.widget.CardView>

</LinearLayout>