<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    xmlns:tools="http://schemas.android.com/tools">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center">

    <ImageView
        android:id="@+id/image_event"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/sample"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/text_eventname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="sports and fun"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_eventdate"
        tools:text="13-12-08"
        android:gravity="center"
        android:drawableLeft="@drawable/calender"
        android:textSize="15sp"
        android:drawableStart="@drawable/calender"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="hyderabad"
        android:gravity="center"
        android:drawableLeft="@drawable/location"
        android:id="@+id/text_eventlocation"
        android:textSize="15sp"
        android:drawableStart="@drawable/location"
        />
  </LinearLayout>
</android.support.v7.widget.CardView>